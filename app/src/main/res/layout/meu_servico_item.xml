<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvLocal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/poppins"
        android:text="Localizacao"
        android:textColor="#575757"
        app:layout_constraintEnd_toEndOf="@+id/tvNomeServ"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tvNomeServ"
        app:layout_constraintTop_toBottomOf="@+id/tvCategoria" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/poppins"
        android:text="Descrição"
        android:textColor="#575757"
        app:layout_constraintEnd_toEndOf="@+id/tvNomeServ"
        app:layout_constraintStart_toStartOf="@+id/tvLocal"
        app:layout_constraintTop_toBottomOf="@+id/tvLocal" />

    <TextView
        android:id="@+id/tvCategoria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="6dp"
        android:fontFamily="@font/poppins"
        android:text="Categoria"
        android:textColor="#575757"
        app:layout_constraintEnd_toStartOf="@+id/tvPreco"
        app:layout_constraintStart_toStartOf="@+id/tvNomeServ"
        app:layout_constraintTop_toBottomOf="@+id/tvNomeServ" />

    <TextView
        android:id="@+id/tvPreco"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="Valor não definido"
        android:textColor="#00a39b"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvCategoria"
        app:layout_constraintEnd_toEndOf="@+id/tvNomeServ"
        app:layout_constraintTop_toTopOf="@+id/tvCategoria" />

    <TextView
        android:id="@+id/tvNomeServ"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/poppins"
        android:text="Nome do serviço"
        android:textColor="#575757"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgServ"
        app:layout_constraintTop_toTopOf="@+id/imgServ" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgServ"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>